package views;

import javafx.scene.control.*;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.layout.Priority;

public class ExplorerView {
    private VBox explorer;
    private TreeItem<Object> rootDummy;
    private TreeItem<Object> raizMundos;
    private TreeItem<Object> raizRogArchive;
    private TreeView<Object> arbolMundos;

    public ExplorerView() {
        rootDummy = new TreeItem<>(); // No visible en UI
        rootDummy.setExpanded(true);

        // üåç Mundos
        raizMundos = new TreeItem<>("üåç Mundos");
        raizMundos.setExpanded(true);
        HBox mundosGraphic = new HBox(new Label("üåç Mundos"));
        raizMundos.setGraphic(mundosGraphic);

        // üóÑ ROG Archive
        raizRogArchive = new TreeItem<>("üóÑ ROG Archive");
        raizRogArchive.setExpanded(true);
        HBox archiveGraphic = new HBox(new Label("üóÑ ROG Archive"));
        raizRogArchive.setGraphic(archiveGraphic);

        // Agregar ramas a ra√≠z invisible
        rootDummy.getChildren().addAll(raizMundos, raizRogArchive);

        arbolMundos = new TreeView<>(rootDummy);
        arbolMundos.setShowRoot(false); // Ocultamos la ra√≠z t√©cnica

        VBox.setVgrow(arbolMundos, Priority.ALWAYS);
        explorer = new VBox(new Label("üìÅ Explorer"), arbolMundos);
        explorer.setStyle("-fx-background-color: #DDEEFF; -fx-padding: 10;");
    }

    public VBox getExplorerPane() {
        return explorer;
    }

    public TreeView<Object> getTreeView() {
        return arbolMundos;
    }

    public TreeItem<Object> getRootItem() {
        return raizMundos;
    }

    public TreeItem<Object> getRogArchiveRoot() {
        return raizRogArchive;
    }
}
