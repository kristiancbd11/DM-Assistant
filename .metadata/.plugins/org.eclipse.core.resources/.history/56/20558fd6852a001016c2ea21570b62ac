package control;

import javafx.scene.control.TreeItem;
import views.InfoView;
import clases_partida.Mundo;

public class InfoController {

    private final InfoView infoView;

    public void cambiarVista(InfoViewType type, Object value) {
    	
    }
    
    public InfoController(InfoView infoView) {
        this.infoView = infoView;
    }

    /**
     * Muestra la información de un mundo seleccionado.
     * 
     * @param selectedItem El ítem seleccionado del TreeView
     */
    public void mostrarInformacion(TreeItem<Object> selectedItem) {
        infoView.showViewMundo(selectedItem);
    }

    /**
     * Limpia la vista de información.
     */
    public void limpiarInformacion() {
        infoView.getInfoLabel().setText("Sin información.");
    }

    /**
     * Devuelve la vista para ser usada en el layout principal.
     * 
     * @return InfoView
     */
    public InfoView getView() {
        return infoView;
    }
}
