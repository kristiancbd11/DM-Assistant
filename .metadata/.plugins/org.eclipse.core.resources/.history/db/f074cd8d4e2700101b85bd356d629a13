package views;

import clases_partida.Mundo;
import control.CreationPersonajeController;
import control.CreationType;
import control.ExplorerController;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.StackPane;
import javafx.stage.Modality;
import javafx.stage.Stage;

public class CreationWindowView extends Stage {

    public CreationWindowView(CreationType type, ExplorerController explorerControler, Mundo mundo) {
        setTitle("Nuevo " + type.name().toLowerCase());

        BorderPane root = new BorderPane();
        Scene scene = new Scene(root, 600, 650);

        StackPane contenidoConPadding = new StackPane();
        contenidoConPadding.setPadding(new Insets(15)); // 15px de espacio por todos lados

        switch (type) {
            case PERSONAJE:
            	CreationPersonajeView view = new CreationPersonajeView();
            	CreationPersonajeController control = new CreationPersonajeController(view, explorerControler, mundo);
                contenidoConPadding.getChildren().add(view);
                break;
            case NPC:
                // contenidoConPadding.getChildren().add(new CreationNpcView());
                break;
            case CRIATURA:
                // contenidoConPadding.getChildren().add(new CreationCriaturaView());
                break;
            case UBICACION:
                // contenidoConPadding.getChildren().add(new CreationUbicacionView());
                break;
            case ESCENA:
                // contenidoConPadding.getChildren().add(new CreationEscenaView());
                break;
        }

        root.setCenter(contenidoConPadding);

        setScene(scene);
        initModality(Modality.APPLICATION_MODAL); // Bloquea la ventana principal
        showAndWait(); // Espera a que se cierre esta ventana antes de continuar
    }
}
