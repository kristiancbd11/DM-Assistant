    public VBox showInfoView() {
        return infoBox;
    }

    public void showViewMundo(TreeItem<Object> selectedItem) {
        if (selectedItem != null && selectedItem.getValue() instanceof Mundo) {
            Mundo mundo = (Mundo) selectedItem.getValue();
            infoLabel.setText("Mundo seleccionado: " + mundo.getNombre());
        } else {
            infoLabel.setText("Selecciona un mundo para ver su informaci√≥n.");
        }
    }

	public Label getInfoLabel() {
		return infoLabel;
	}

	public void setInfoLabel(Label infoLabel) {
		this.infoLabel = infoLabel;
	}

	public VBox getInfoBox() {
		return infoBox;
	}

	public void setInfoBox(VBox infoBox) {
		this.infoBox = infoBox;
	}
    
    
}
