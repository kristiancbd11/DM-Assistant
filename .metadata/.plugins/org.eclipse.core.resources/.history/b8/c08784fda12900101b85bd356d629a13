package views;

import clases_personaje.Personaje;
import javafx.geometry.Insets;
import javafx.scene.control.Label;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;

public class PersonajeView {

    public StackPane crearView(Personaje personaje) {
        // Contenedor principal de la vista del personaje
        VBox contenedor = new VBox(10);
        contenedor.setPadding(new Insets(20));

        // Crear etiquetas con la información del personaje
        Label titulo = new Label("Ficha del Personaje");
        titulo.setStyle("-fx-font-size: 18px; -fx-font-weight: bold;");

        Label nombre = new Label("Nombre: " + personaje.getNombre());
        Label clase = new Label("Clase: " + personaje.getClase());
        Label subclase = new Label("Subclase: " + personaje.getSubclase());
        Label nivel = new Label("Nivel: " + personaje.getNivel());
        Label experiencia = new Label("Experiencia: " + personaje.getExperiencia());
        Label raza = new Label("Raza: " + personaje.getRaza());
        Label sexo = new Label("Sexo: " + personaje.getSexo());
        Label religion = new Label("Religión: " + personaje.getReligion());
        Label nacion = new Label("Nación: " + personaje.getNacion());
        Label ideologia = new Label("Ideología: " + personaje.getIdeologia());

        // Agregar todas las etiquetas al contenedor
        contenedor.getChildren().addAll(
            titulo, nombre, clase, subclase, nivel, experiencia,
            raza, sexo, religion, nacion, ideologia
        );

        // Insertar el contenedor dentro de un StackPane
        StackPane pane = new StackPane(contenedor);
        pane.setStyle("-fx-background-color: #f8f8f8;");

        return pane;
    }
}
